{
  "name": "album-of-the-day",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "calculate-album": "bun scripts/calculateTodaysAlbum.ts",
    "format": "biome check --write --unsafe .",
    "lint": "biome check .",
    "test:db:up": "docker compose up -d --wait",
    "test:db:down": "docker compose down -v",
    "test:db:migrate": "dotenv -e .env.test -- prisma migrate deploy",
    "test:integration": "bun run test:db:up && bun run test:db:migrate && vitest run --project integration && bun run test:db:down",
    "test:unit": "vitest run --project unit"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "@types/node": "^25.0.3",
    "nuxt": "^4.2.2",
    "pg": "^8.16.3",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@electric-sql/pglite": "^0.3.14",
    "@nuxt/test-utils": "^3.23.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "happy-dom": "^20.0.11",
    "prisma": "^7.2.0",
    "vitest": "^4.0.16"
  }
}
